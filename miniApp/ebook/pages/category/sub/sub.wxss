/* pages/category/sub/sub.wxss */
.cu-card.article>.cu-item,
.cu-card.article>.cu-item .content {
  padding: 0;
  height: 320rpx;
}

.cu-card.article>.cu-item .content .text-desc {
  font-size: 24rpx;
  color: #888;
  overflow: hidden;
  margin: 15rpx 0
}

.cu-card>.cu-item {
  margin: 15rpx 30rpx;
}

.cu-card>.cu-item:first {
  margin-top: 30rpx;
}

.cu-card.article>.cu-item .content .warp {
  padding: 10rpx 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cu-card.article>.cu-item .warp .title {
  line-height: 50rpx;
  padding: 0;
}

.cu-card.article>.cu-item .content>image {
  margin-right: 0;
}

.cu-card .cu-item {
  position: relative;
}

.cu-card .cu-item .cu-ftag {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  vertical-align: middle;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0rpx 16rpx;
  height: 48rpx;
  font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
}