<!--pages/category/sub/sub.wxml-->
<wxs src="./../../../utils/filter.wxs" module="filter" />

<cu-custom bgColor="bg-gradual-orange" isCustom="{{false}}" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">
    <text>{{title}}频道</text>
  </view>
</cu-custom>
<view wx:if="{{!hasData}}" class="no-data text-grey">
  <iconfont icon="nodata-3"></iconfont>
</view>
<navigator hover-class='none' url="/pages/book/book?id={{item.id}}" wx:for="{{list}}" wx:key="index">
<view class="cu-card article {{isCard?'no-card':''}}">
  <view class="cu-item shadow">
    <view class="cu-ftag bg-grey">{{item.index}}</view>
    <view class="content">
      <image-preload originalImage='{{item.thumCover}}' width="240" mode="widthFix" loadmode="widthFix">
      </image-preload>
      <!-- <image src="{{item.cover}},1,150,150,1" mode="widthFix"></image> -->
      <view class="warp">
        <view class="title">{{item.name}}
        </view>
        <view class="text-desc">{{item.desc}}</view>
        <view>
          <view class="cu-tag bg-red light sm round">{{item.author}}</view>
          <view class="cu-tag bg-green light sm round">{{filter.BOOK_STATUS(item.status)}}</view>
          <view class="cu-tag bg-orange light sm round">{{filter.BOOK_RATE(item.rate)}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
</navigator>
<view wx:if="{{fetchFinsh}}" class="data-ok text-grey">
  <iconfont icon="line"></iconfont>
</view>